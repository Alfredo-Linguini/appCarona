<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundoquadrado"
    tools:context=".telaEsqueciSenha">

    <LinearLayout
        android:id="@+id/senh"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="200dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/lblEmailCadastrado"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="E-mail Para Recuperação"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/lblNome"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:hint="Nome"
            android:inputType="textPersonName"
            android:singleLine="true" />

        <CheckBox
            android:id="@+id/checkMotorista"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Motorista" />

        <CheckBox
            android:id="@+id/checkPassageiro"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Passageiro" />

    </LinearLayout>

    <Button
        android:id="@+id/btnEnviar"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="550dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/enviaremail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="onDisplay"/>

</android.support.constraint.ConstraintLayout>